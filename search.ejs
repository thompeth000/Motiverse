  <body>
    <h1 class="text">Search Results</h1>
	<div id="results">
	  <%if (taskList.length === 0) {%>
	    <p>No tasks found...</p>
      <%} else { for(var i = 0; i < taskList.length; i++){%>
		 <h2 class="searchResult text"><%=taskList[i].title %></h2>
		 <button class="button text" onclick="displayTaskOptions('<%=taskList[i]._id %>')">Add Task</button>
		 <p class="text"><%=taskList[i].val %> pts</p>
		 </br>
	  <%} }%>
	</div>
	<a href="/taskSelect">Back...</a>
  </body>
